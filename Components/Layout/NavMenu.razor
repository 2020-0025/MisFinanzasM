@implements IDisposable
@inject NavigationManager NavigationManager

<!-- Nav Horizontal -->
<nav class="navbar-horizontal">
    <div class="navbar-content">

        <!-- User Section (solo desktop) -->
        <div class="navbar-user">
            <AuthorizeView>
                <Authorized>
                    <form action="/Account/Logout" method="post" class="logout-form">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="btn-logout" title="Cerrar Sesión">
                            <span style="font-size: 15px;">🔐</span>
                        </button>
                    </form>
                    <div class="user-info">
                        <span style="font-size: 17px;">🧑‍💼</span>
                        <span class="user-name">@context.User.Identity?.Name</span>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="nav-link-horizontal" href="/Account/Login">
                        <span style="font-size: 15px;">🔑</span>
                        <span>Iniciar Sesión</span>
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        

        <!-- Links Horizontales (solo desktop) -->
        <div class="navbar-links" style="margin-left:16rem">
            <AuthorizeView>
                <Authorized>
                    <NavLink class="nav-link-horizontal" href="/" Match="NavLinkMatch.All">
                        <span style="font-size: 17px;">🏠</span>
                        <span class="text-white">Inicio</span>
                    </NavLink>
                    <NavLink class="nav-link-horizontal" href="/dashboard" Match="NavLinkMatch.All">
                        <span style="font-size: 17px;">📊</span>
                        <span class="text-white">Dashboard</span>
                    </NavLink>

                    <NavLink class="nav-link-horizontal" href="/categories">
                        <span style="font-size: 17px;">📁</span>
                        <span class="text-white">Categorías</span>
                    </NavLink>

                    <NavLink class="nav-link-horizontal" href="/transactions">
                        <span style="font-size: 17px;">💳</span>
                        <span class="text-white">Transacciones</span>
                    </NavLink>

                    <NavLink class="nav-link-horizontal" href="/goals">
                        <span style="font-size: 17px;">🎯</span>
                        <span class="text-white">Metas</span>
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </div>

        

        <!-- Menu Horizontal en Mobile-->
        <div class="navbar-mobile">
            <AuthorizeView>
                <Authorized>
                    <form action="/Account/Logout" method="post" class="logout-form-mobile-nav">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="btn-logout-mobile" title="Cerrar Sesión">
                            <span style="font-size: 15px;">🔐</span>
                        </button>
                    </form>
                    <div class="user-info-mobile">
                        <span style="font-size: 17px;">🧑‍💼</span>
                        <span class="user-name">@context.User.Identity?.Name</span>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

<!-- Footer Navegación Móvil -->
<nav class="footer-mobile-nav">
    <AuthorizeView>
        <Authorized>
            <NavLink href="/" class="footer-nav-item" Match="NavLinkMatch.All">
                <span style="font-size: 17px;">🏠</span>
                <span class="text-white">Inicio</span>
            </NavLink>

            <NavLink href="/dashboard" class="footer-nav-item">
                <span style="font-size: 17px;">📊</span>
                <span class="text-white">Dashboard</span>
            </NavLink>

            <NavLink href="/categories" class="footer-nav-item">
                <span style="font-size: 17px;">📁</span>
                <span class="text-white">Categorías</span>
            </NavLink>

            <NavLink href="/transactions" class="footer-nav-item">
                <span style="font-size: 17px;">💳</span>
                <span class="text-white">Transacciones</span>
            </NavLink>

            <NavLink href="/goals" class="footer-nav-item">
                <span style="font-size: 17px;">🎯</span>
                <span class="text-white">Metas</span>
            </NavLink>
        </Authorized>
    </AuthorizeView>
</nav>


@code {
    private string? currentUrl;
    private bool isMenuOpen = false;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

