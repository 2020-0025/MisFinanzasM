@using MisFinanzas.Services
@inherits LayoutComponentBase
@inject AuthService AuthService
@inject IJSRuntime JSRuntime

<div class="page-wrapper">
    <NavMenu />
    <main class="main-content">
        @Body
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("🚀 MainLayout: OnInitializedAsync - Inicializando AuthService...");

        // Inicializar AuthService solo si no está inicializado
        if (!AuthService.IsInitialized)
        {
            await AuthService.InitializeAsync();
            Console.WriteLine($"🚀 MainLayout: AuthService inicializado - IsAuth: {AuthService.IsAuthenticated}");
        }
        else
        {
            Console.WriteLine("🚀 MainLayout: AuthService ya estaba inicializado");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Verificar de nuevo después del render por si acaso
            if (!AuthService.IsInitialized)
            {
                Console.WriteLine("🚀 MainLayout: OnAfterRenderAsync - Re-inicializando AuthService...");
                await AuthService.InitializeAsync();
            }
        }
    }
}

<style>
    .page-wrapper {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .main-content {
        flex: 1;
        margin-top: 70px;
        position: relative;
        z-index: 1;
    }
</style>
