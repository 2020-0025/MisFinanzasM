@page "/"
@using MisFinanzas.Components.Layout
@using MisFinanzas.Services
@layout MinimalLayout
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject IJSRuntime JSRuntime

<PageTitle>Mis Finanzas - Gestión Financiera Inteligente</PageTitle>

<div style="min-height: 100vh; padding: 20px;">

    <!-- Navigation Bar -->
    <nav class="glass-nav animate-slide-up" style="padding: 15px 30px; margin-bottom: 40px; border-radius: 16px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
        <div style="display: flex; align-items: center; gap: 10px;">
            @* <span style="font-size: 24px;">💰</span> *@
            <h3 style="margin: 0; color: white; font-weight: 600;">Mis Finanzas</h3>
        </div>
        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
            <a href="/register" class="btnLogin">Registrarse</a>
            <a href="/login" class="btnLogin">Iniciar Sesión</a>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="glass-card animate-slide-up animate-delay-1" style="padding: 20px 20px; text-align: center; margin-bottom: 20px; display:grid;">
        @* <div style="width:200px; height:150px; margin: 0 auto; margin-top:0px">
            <img src="Billetera.png" style="width:250px; height:100%; margin-top:0">
        </div> *@
        <h1 style="color: white; font-size: 3.5rem; margin-bottom: 20px; margin-top:0px; font-weight: 600;">
            Mis Finanzas
        </h1>
        <p class="text-white" style="font-size: 1.3rem; max-width: 600px; margin: 0 auto;">
            Toma el control de tu dinero con inteligencia y simplicidad
        </p>
    </div>

    <div style="display: flex; justify-content: center; align-items: center; width: 100%;">

        <!-- Features Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; margin-top: 40px; width: 100%; max-width: 900px; padding: 0 20px;">

            <!-- Categories Card -->
            <div class="glass-card animate-slide-up animate-delay-3" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">🏷️</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Categorías</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Organiza tus finanzas por categorías personalizadas
                </p>

                <!-- Demo Categories -->
                <div class="demo-category">
                    <span style="font-size: 24px;">🍔</span>
                    <div style="flex: 1; color: white;">
                        <div style="font-weight: 600;">Alimentación</div>
                        <div class="text-white" style="font-size: 0.9rem;">RD$450 gastados</div>
                    </div>
                </div>
                <div class="demo-category">
                    <span style="font-size: 24px;">🚗</span>
                    <div style="flex: 1; color: white;">
                        <div style="font-weight: 600;">Transporte</div>
                        <div class="text-white" style="font-size: 0.9rem;">RD$320 gastados</div>
                    </div>
                </div>
                <div class="demo-category">
                    <span style="font-size: 24px;">🎮</span>
                    <div style="flex: 1; color: white;">
                        <div style="font-weight: 600;">Entretenimiento</div>
                        <div class="text-white" style="font-size: 0.9rem;">RD$180 gastados</div>
                    </div>
                </div>
            </div>

            <!-- Transactions Card -->
            <div class="glass-card animate-slide-up animate-delay-4" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">💳</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Gastos e Ingresos</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Registra y visualiza cada movimiento de dinero
                </p>

                <!-- Demo Transactions -->
                <div class="demo-transaction">
                    <div style="color: white;">
                        <div style="font-weight: 600;">Supermercado</div>
                        <div class="text-white" style="font-size: 0.85rem;">Hoy • Alimentación</div>
                    </div>
                    <div style="color: #F44336; font-weight: 600; font-size: 1.1rem;">-RD$850</div>
                </div>
                <div class="demo-transaction">
                    <div style="color: white;">
                        <div style="font-weight: 600;">Salario</div>
                        <div class="text-white" style="font-size: 0.85rem;">15 Oct • Ingreso</div>
                    </div>
                    <div style="color: #4CAF50; font-weight: 600; font-size: 1.1rem;">+RD$2,500.00</div>
                </div>
                <div class="demo-transaction">
                    <div style="color: white;">
                        <div style="font-weight: 600;">Netflix</div>
                        <div class="text-white" style="font-size: 0.85rem;">10 Oct • Suscripciones</div>
                    </div>
                    <div style="color: #F44336; font-weight: 600; font-size: 1.1rem;">-RD$750</div>
                </div>
            </div>

            <!-- Financial Goals & Budgets Card -->
            <div class="glass-card animate-slide-up animate-delay-4" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">🎯</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Metas y Presupuestos</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Define objetivos y controla tus gastos mensuales
                </p>

                <!-- Metas Section -->
                <div style="margin-bottom: 20px;">
                    <h3 style="color: rgba(255, 255, 255, 0.9); font-size: 1rem; margin-bottom: 12px; font-weight: 600;">
                        📌 Metas Financieras
                    </h3>
                    <div class="demo-goal">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                            <span style="color: white; font-weight: 600;">🏖️ Vacaciones</span>
                            <span style="color: white; font-weight: 600;">75%</span>
                        </div>
                        <div style="color: white; font-size: 0.9rem;">RD$3,750 de RD$5,000</div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 75%;"></div>
                        </div>
                    </div>
                    <div class="demo-goal">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                            <span style="color: white; font-weight: 600;">💻 Nueva Laptop</span>
                            <span style="color: white; font-weight: 600;">40%</span>
                        </div>
                        <div style="color: white; font-size: 0.9rem;">RD$800 de RD$2,000</div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 40%;"></div>
                        </div>
                    </div>
                </div>

                <!-- Presupuestos Section -->
                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid rgba(255, 255, 255, 0.2);">
                    <h3 style="color: rgba(255, 255, 255, 0.9); font-size: 1rem; margin-bottom: 12px; font-weight: 600;">
                        💰 Control de Presupuestos
                    </h3>
                    <div class="demo-goal">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                            <span style="color: white; font-weight: 600;">🍔 Alimentación</span>
                            <span style="color: white; font-weight: 600;">85%</span>
                        </div>
                        <div style="color: white; font-size: 0.9rem;">RD$425 de RD$500</div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 85%; background: linear-gradient(90deg, #ffc107 0%, #ff9800 100%);"></div>
                        </div>
                    </div>
                    <div class="demo-goal">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                            <span style="color: white; font-weight: 600;">🚗 Transporte</span>
                            <span style="color: white; font-weight: 600;">60%</span>
                        </div>
                        <div style="color: white; font-size: 0.9rem;">RD$180 de RD$300</div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 60%;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dashboard Card -->
            <div class="glass-card animate-slide-up animate-delay-2" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">📊</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Dashboard</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Visualiza tu situación financiera de un vistazo
                </p>

                <!-- Balance Total -->
                <div class="demo-stat" style="margin-bottom: 15px;">
                    <div style="color: white; font-size: 0.9rem;">Balance Total</div>
                    <div style="color: #4CAF50; font-size: 1.8rem; font-weight: 600;">RD$12,450.00</div>
                </div>

                <!-- Ingresos y Gastos -->
                <div style="display: flex; gap: 10px; margin-bottom: 15px;">
                    <div class="demo-stat" style="flex: 1;">
                        <div style="color: white; font-size: 0.8rem;">Ingresos</div>
                        <div style="color: #4CAF50; font-size: 1.2rem; font-weight: 600;">RD$8,200</div>
                    </div>
                    <div class="demo-stat" style="flex: 1; background: rgba(244, 67, 54, 0.2); border-color: rgba(244, 67, 54, 0.3);">
                        <div style="color: white; font-size: 0.8rem;">Gastos</div>
                        <div style="color: #F44336; font-size: 1.2rem; font-weight: 600;">RD$3,750</div>
                    </div>
                </div>

                <!-- Gráfico de barras simulado -->
                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid rgba(255, 255, 255, 0.2);">
                    <h3 style="color: rgba(255, 255, 255, 0.9); font-size: 1rem; margin-bottom: 12px; font-weight: 600;">
                        📊 Gastos vs Ingresos
                    </h3>
                    <div style="position: relative; height: 120px; padding: 10px; background: rgba(0, 0, 0, 0.2); border-radius: 8px;">
                        <svg style="width: 100%; height: 100%;">
                            <!-- Líneas de guía -->
                            <line x1="0" y1="20%" x2="100%" y2="20%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />
                            <line x1="0" y1="40%" x2="100%" y2="40%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />
                            <line x1="0" y1="60%" x2="100%" y2="60%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />
                            <line x1="0" y1="80%" x2="100%" y2="80%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />

                            <!-- Barras de Ingresos (verdes) -->
                            <rect x="8%" y="50%" width="6%" height="40%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                            <rect x="22%" y="45%" width="6%" height="45%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                            <rect x="36%" y="35%" width="6%" height="55%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                            <rect x="50%" y="30%" width="6%" height="60%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                            <rect x="64%" y="40%" width="6%" height="50%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                            <rect x="78%" y="25%" width="6%" height="65%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />

                            <!-- Barras de Gastos (rojas) -->
                            <rect x="14%" y="60%" width="6%" height="30%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                            <rect x="28%" y="55%" width="6%" height="35%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                            <rect x="42%" y="45%" width="6%" height="45%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                            <rect x="56%" y="55%" width="6%" height="35%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                            <rect x="70%" y="50%" width="6%" height="40%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                            <rect x="84%" y="40%" width="6%" height="50%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                        </svg>
                    </div>

                    <!-- Leyenda -->
                    <div style="display: flex; justify-content: center; gap: 20px; margin-top: 10px;">
                        <div style="display: flex; align-items: center; gap: 6px;">
                            <div style="width: 12px; height: 12px; background: #4CAF50; border-radius: 2px;"></div>
                            <small style="color: white; font-size: 0.8rem;">Ingresos</small>
                        </div>
                        <div style="display: flex; align-items: center; gap: 6px;">
                            <div style="width: 12px; height: 12px; background: #F44336; border-radius: 2px;"></div>
                            <small style="color: white; font-size: 0.8rem;">Gastos</small>
                        </div>
                    </div>
                </div>


                <!-- Estadísticas adicionales -->
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 15px;">
                    <div style="background: rgba(33, 150, 243, 0.2); border: 1px solid rgba(33, 150, 243, 0.3); border-radius: 8px; padding: 10px; text-align: center;">
                        <div style="color: white; font-size: 0.75rem;">Registros</div>
                        <div style="color: #2196F3; font-size: 1.3rem; font-weight: 600;">45</div>
                    </div>
                    <div style="background: rgba(156, 39, 176, 0.2); border: 1px solid rgba(156, 39, 176, 0.3); border-radius: 8px; padding: 10px; text-align: center;">
                        <div style="color: white; font-size: 0.75rem;">Categorías</div>
                        <div style="color: #9C27B0; font-size: 1.3rem; font-weight: 600;">8</div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Call to Action -->
    <div class="glass-card animate-slide-up" style="padding: 50px 40px; text-align: center; margin-top: 60px; margin-bottom: 40px;">
        <h2 style="color: white; font-size: 2rem; margin-bottom: 15px;">¿Listo para transformar tus finanzas?</h2>
        <p style="color: white; font-size: 1.1rem; margin-bottom: 30px;">
            Comienza desde hoy a tomar el control de tu dinero
        </p>
        <div style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
            <a href="/register" class="btnLogin" style="font-size: 1.1rem; padding: 14px 32px;">Comenzar Ahora</a>
        </div>
    </div>

</div>

