</div>

@code {
    private bool hasChecked = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasChecked)
        {
            hasChecked = true;

            Console.WriteLine("🏠 Home: OnAfterRenderAsync - firstRender");
            Console.WriteLine($"🏠 Home: AuthService.IsInitialized = {AuthService.IsInitialized}");
            Console.WriteLine($"🏠 Home: AuthService.IsAuthenticated = {AuthService.IsAuthenticated}");

            // Esperar a que AuthService esté listo
            if (!AuthService.IsInitialized)
            {
                await Task.Delay(500);
                await AuthService.InitializeAsync();
            }
            else
            {
                await Task.Delay(200);
            }

            Console.WriteLine($"🏠 Home: Después de espera - IsAuthenticated = {AuthService.IsAuthenticated}");

            // Si está autenticado, redirigir
            if (AuthService.IsAuthenticated)
            {
                var redirectUrl = AuthService.IsAdmin ? "/admin" : "/dashboard";
                Console.WriteLine($"🏠 Home: Redirigiendo a {redirectUrl}");

                await JSRuntime.InvokeVoidAsync("eval", $"window.location.href = '{redirectUrl}'");
            }
            else
            {
                Console.WriteLine("🏠 Home: Usuario NO autenticado, mostrando Home");
            }
        }
    }
}
    





