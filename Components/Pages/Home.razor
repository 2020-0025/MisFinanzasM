@page "/"
@using MisFinanzas.Components.Layout
@using MisFinanzas.Services
@layout MinimalLayout
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Mis Finanzas - Gestión Financiera Inteligente</PageTitle>

<div class="home-container" style="min-height: 100vh; padding: 20px;">

    <!-- Navigation Bar -->
    <nav class="glass-nav animate-slide-up" style="padding: 15px 30px; margin-bottom: 40px; border-radius: 16px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">

        <div class="navigation-bar">

            <div style="display: flex; align-items: center; gap: 10px;">

                <img src="/MisFinanzas.png" alt="Mis Finanzas Logo" style="width: 40px; height: 40px;" />

                <h3 style="margin: 0; color: white; font-weight: 600;">Mis Finanzas</h3>
            </div>
            <div class="links" style="display: flex; gap: 15px; flex-wrap: wrap;">
                @if (!isAuthenticated)
                {
                    <a href="/register" class="btnLogin">Registrarse</a>
                    <a href="/login" class="btnLogin">Iniciar Sesión</a>
                }
                else
                {
                    <a href="/dashboard" class="btnLogin">Ir al Panel de Control</a>
                }
            </div>

        </div>

        
    </nav>

    <!-- Hero Section -->
    <div class="glass-card animate-slide-up animate-delay-1" style="padding: 20px 20px; text-align: center; margin-bottom: 20px; display:grid;">
        <div class="title" style="display:flex; align-items:center; margin:0 auto;">
            <img src="/MisFinanzas.png" alt="Mis Finanzas Logo" style="width: 100px; height: 100px;" />
            <h1 style="color: white; font-size: 3.5rem; margin-bottom: 8px; margin-top:0px; font-weight: 600;">
                Mis Finanzas
            </h1>
        </div>
        <p class="text-white" style="font-size: 1.3rem; max-width: 600px; margin: 0 auto;">
            Toma el control de tu dinero con inteligencia y simplicidad
        </p>
    </div>

    <div style="display: flex; justify-content: center; align-items: center; width: 100%;">

        <!-- Features Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; margin-top: 40px; width: 100%; max-width: 900px; padding: 0 20px;">

            <!-- FILA 1: Categorías + Presupuestos -->
            <!-- Categories Card -->
            <div class="glass-card animate-slide-up animate-delay-3" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">🏷️</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Categorías</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Organiza tus finanzas por categorías personalizadas
                </p>

                <!-- Demo Categories -->
                <div class="demo-category">
                    <span style="font-size: 24px;">🍔</span>
                    <div style="flex: 1; color: white;">
                        <div style="font-weight: 600;">Alimentación</div>
                        <div class="text-white" style="font-size: 0.9rem;">RD$450 gastados</div>
                    </div>
                </div>
                <div class="demo-category">
                    <span style="font-size: 24px;">🚗</span>
                    <div style="flex: 1; color: white;">
                        <div style="font-weight: 600;">Transporte</div>
                        <div class="text-white" style="font-size: 0.9rem;">RD$320 gastados</div>
                    </div>
                </div>
                <div class="demo-category">
                    <span style="font-size: 24px;">🎮</span>
                    <div style="flex: 1; color: white;">
                        <div style="font-weight: 600;">Entretenimiento</div>
                        <div class="text-white" style="font-size: 0.9rem;">RD$180 gastados</div>
                    </div>
                </div>
            </div>

            <!-- Budgets Card -->
            <div class="glass-card animate-slide-up animate-delay-3" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">💰</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Presupuestos</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Controla tus gastos mensuales por categoría
                </p>

                <div class="demo-goal">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: white; font-weight: 600;">🍔 Alimentación</span>
                        <span style="color: white; font-weight: 600;">85%</span>
                    </div>
                    <div style="color: white; font-size: 0.9rem;">RD$425 de RD$500</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 85%; background: linear-gradient(90deg, #ffc107 0%, #ff9800 100%);"></div>
                    </div>
                </div>
                <div class="demo-goal">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: white; font-weight: 600;">🚗 Transporte</span>
                        <span style="color: white; font-weight: 600;">60%</span>
                    </div>
                    <div style="color: white; font-size: 0.9rem;">RD$180 de RD$300</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 60%;"></div>
                    </div>
                </div>
                <div class="demo-goal">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: white; font-weight: 600;">🎮 Entretenimiento</span>
                        <span style="color: white; font-weight: 600;">30%</span>
                    </div>
                    <div style="color: white; font-size: 0.9rem;">RD$90 de RD$300</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 30%; background: linear-gradient(90deg, #4CAF50 0%, #8BC34A 100%);"></div>
                    </div>
                </div>
            </div>

            <!-- FILA 2: Gastos e Ingresos + Recordatorios -->
            <!-- Transactions Card -->
            <div class="glass-card animate-slide-up animate-delay-4" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">💳</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Gastos e Ingresos</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Registra y visualiza cada movimiento de dinero
                </p>

                <!-- Demo Transactions -->
                <div class="demo-transaction">
                    <div style="color: white;">
                        <div style="font-weight: 600;">Supermercado</div>
                        <div class="text-white" style="font-size: 0.85rem;">Hoy • Alimentación</div>
                    </div>
                    <div style="color: #F44336; font-weight: 600; font-size: 1.1rem;">-RD$850</div>
                </div>
                <div class="demo-transaction">
                    <div style="color: white;">
                        <div style="font-weight: 600;">Salario</div>
                        <div class="text-white" style="font-size: 0.85rem;">15 Oct • Ingreso</div>
                    </div>
                    <div style="color: #4CAF50; font-weight: 600; font-size: 1.1rem;">+RD$2,500.00</div>
                </div>
                <div class="demo-transaction">
                    <div style="color: white;">
                        <div style="font-weight: 600;">Netflix</div>
                        <div class="text-white" style="font-size: 0.85rem;">10 Oct • Suscripciones</div>
                    </div>
                    <div style="color: #F44336; font-weight: 600; font-size: 1.1rem;">-RD$750</div>
                </div>
            </div>

            <!-- Reminders/Notifications Card (NUEVO) -->
            <div class="glass-card animate-slide-up animate-delay-4" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">🔔</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Recordatorios</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Notificaciones de gastos fijos y pagos pendientes
                </p>

                <!-- Demo Notifications -->
                <div class="demo-notification">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="font-size: 24px;">🏠</span>
                        <div style="flex: 1; color: white;">
                            <div style="font-weight: 600;">Pago de Alquiler</div>
                            <div class="text-white" style="font-size: 0.85rem;">Vence mañana</div>
                        </div>
                    </div>
                    <div style="color: #FFC107; font-weight: 600;">RD$5,000</div>
                </div>
                <div class="demo-notification">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="font-size: 24px;">💡</span>
                        <div style="flex: 1; color: white;">
                            <div style="font-weight: 600;">Electricidad</div>
                            <div class="text-white" style="font-size: 0.85rem;">Vence en 2 días</div>
                        </div>
                    </div>
                    <div style="color: #4CAF50; font-weight: 600;">RD$1,200</div>
                </div>
                <div class="demo-notification">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <span style="font-size: 24px;">📱</span>
                        <div style="flex: 1; color: white;">
                            <div style="font-weight: 600;">Internet</div>
                            <div class="text-white" style="font-size: 0.85rem;">Vence hoy</div>
                        </div>
                    </div>
                    <div style="color: #F44336; font-weight: 600;">RD$800</div>
                </div>
            </div>

            <!-- FILA 3: Metas Financieras + Préstamos -->
            <!-- Financial Goals Card -->
            <div class="glass-card animate-slide-up animate-delay-5" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">🎯</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Metas Financieras</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Define objetivos y alcanza tus sueños
                </p>

                <div class="demo-goal">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: white; font-weight: 600;">🏖️ Vacaciones</span>
                        <span style="color: white; font-weight: 600;">75%</span>
                    </div>
                    <div style="color: white; font-size: 0.9rem;">RD$3,750 de RD$5,000</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 75%;"></div>
                    </div>
                </div>
                <div class="demo-goal">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: white; font-weight: 600;">💻 Nueva Laptop</span>
                        <span style="color: white; font-weight: 600;">40%</span>
                    </div>
                    <div style="color: white; font-size: 0.9rem;">RD$800 de RD$2,000</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 40%;"></div>
                    </div>
                </div>
                <div class="demo-goal">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                        <span style="color: white; font-weight: 600;">🚗 Carro Nuevo</span>
                        <span style="color: white; font-weight: 600;">15%</span>
                    </div>
                    <div style="color: white; font-size: 0.9rem;">RD$3,000 de RD$20,000</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 15%;"></div>
                    </div>
                </div>
            </div>

            <!-- Loans Card (NUEVO) -->
            <div class="glass-card animate-slide-up animate-delay-5" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">🏦</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Préstamos</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Gestiona tus préstamos y cuotas mensuales
                </p>

                <!-- Demo Loan -->
                <div class="demo-loan">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                        <span style="color: white; font-weight: 600;">💳 Préstamo Personal</span>
                        <span class="badge" style="background: #4CAF50; color: white; padding: 3px 8px; border-radius: 12px; font-size: 0.75rem;">Activo</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 8px; color: rgba(255,255,255,0.8); font-size: 0.85rem;">
                        <span>Cuota mensual:</span>
                        <span style="color: white; font-weight: 600;">RD$1,500</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
                        <span style="color: rgba(255,255,255,0.7); font-size: 0.85rem;">Progreso: 8/24 cuotas</span>
                        <span style="color: white; font-weight: 600; font-size: 0.85rem;">33%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 33%; background: linear-gradient(90deg, #2196F3 0%, #03A9F4 100%);"></div>
                    </div>
                </div>

                <!-- Summary Stats -->
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 15px; padding-top: 15px; border-top: 1px solid rgba(255,255,255,0.2);">
                    <div style="text-align: center;">
                        <div style="color: rgba(255,255,255,0.7); font-size: 0.8rem;">Total Prestado</div>
                        <div style="color: #2196F3; font-weight: 600;">RD$30,000</div>
                    </div>
                    <div style="text-align: center;">
                        <div style="color: rgba(255,255,255,0.7); font-size: 0.8rem;">Deuda Restante</div>
                        <div style="color: #FFC107; font-weight: 600;">RD$24,000</div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- FILA 4: Panel de Control (ancho completo) -->
    <div style="display: flex; justify-content: center; margin-top: 30px; width:100%;">
        <div style="width: 100%; max-width: 900px; padding: 0 20px;">
            <div class="glass-card animate-slide-up animate-delay-2" style="padding: 30px;">
                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <span style="font-size: 32px;">📊</span>
                    <h2 style="color: white; margin: 0; font-size: 1.5rem;">Panel de Control</h2>
                </div>
                <p class="text-white" style="margin-bottom: 20px;">
                    Visualiza tu situación financiera de un vistazo
                </p>

                <!-- Balance Total -->
                <div class="demo-stat" style="margin-bottom: 15px;">
                    <div style="color: white; font-size: 0.9rem;">Balance Total</div>
                    <div style="color: #4CAF50; font-size: 1.8rem; font-weight: 600;">RD$12,450.00</div>
                </div>

                <!-- Ingresos y Gastos -->
                <div style="display: flex; gap: 10px; margin-bottom: 20px; margin:0 auto;">
                    <div class="demo-stat" style="flex: 0.5; width:80%;">
                        <div style="color: white; font-size: 0.8rem;">Ingresos</div>
                        <div style="color: #4CAF50; font-size: 1rem; font-weight: 600;">RD$8,200</div>
                    </div>
                    <div class="demo-stat" style="width:80%; flex: 0.5; background: rgba(244, 67, 54, 0.2); border-color: rgba(244, 67, 54, 0.3);">
                        <div style="color: white; font-size: 0.8rem;">Gastos</div>
                        <div style="color: #F44336; font-size: 1rem; font-weight: 600;">RD$3,750</div>
                    </div>
                </div>

                <!-- Contenedor de ambos gráficos - RESPONSIVE -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px; margin-top: 20px; align-items:center;">

                    <!-- Gráfico de barras -->
                    <div style="padding-top: 20px; border-top: 1px solid rgba(255, 255, 255, 0.2); width:80%;">
                        <h3 style="color: rgba(255, 255, 255, 0.9); font-size: 1rem; margin-bottom: 12px; font-weight: 600;">
                            📊 Gastos vs Ingresos
                        </h3>
                        <div style="position: relative; height: 180px; padding: 10px; background: rgba(0, 0, 0, 0.2); border-radius: 8px;">
                            <svg style="width: 90%; height: 100%;">
                                <!-- Líneas de guía -->
                                <line x1="0" y1="20%" x2="100%" y2="20%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />
                                <line x1="0" y1="40%" x2="100%" y2="40%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />
                                <line x1="0" y1="60%" x2="100%" y2="60%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />
                                <line x1="0" y1="80%" x2="100%" y2="80%" stroke="rgba(255,255,255,0.1)" stroke-width="1" />

                                <!-- Barras de Ingresos (verdes) -->
                                <rect x="8%" y="50%" width="6%" height="40%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                                <rect x="22%" y="45%" width="6%" height="45%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                                <rect x="36%" y="35%" width="6%" height="55%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                                <rect x="50%" y="30%" width="6%" height="60%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                                <rect x="64%" y="40%" width="6%" height="50%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />
                                <rect x="78%" y="25%" width="6%" height="65%" fill="#4CAF50" rx="2" style="filter: drop-shadow(0 0 3px rgba(76, 175, 80, 0.6))" />

                                <!-- Barras de Gastos (rojas) -->
                                <rect x="14%" y="60%" width="6%" height="30%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                                <rect x="28%" y="55%" width="6%" height="35%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                                <rect x="42%" y="45%" width="6%" height="45%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                                <rect x="56%" y="55%" width="6%" height="35%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                                <rect x="70%" y="50%" width="6%" height="40%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                                <rect x="84%" y="40%" width="6%" height="50%" fill="#F44336" rx="2" style="filter: drop-shadow(0 0 3px rgba(244, 67, 54, 0.6))" />
                            </svg>
                        </div>

                        <!-- Leyenda -->
                        <div style="display: flex; justify-content: center; gap: 20px; margin-top: 10px;">
                            <div style="display: flex; align-items: center; gap: 6px;">
                                <div style="width: 12px; height: 12px; background: #4CAF50; border-radius: 2px;"></div>
                                <small style="color: white; font-size: 0.8rem;">Ingresos</small>
                            </div>
                            <div style="display: flex; align-items: center; gap: 6px;">
                                <div style="width: 12px; height: 12px; background: #F44336; border-radius: 2px;"></div>
                                <small style="color: white; font-size: 0.8rem;">Gastos</small>
                            </div>
                        </div>
                    </div>

                    <!-- Gráfico de dona (NUEVO) -->
                    <div style="padding-top: 20px; border-top: 1px solid rgba(255, 255, 255, 0.2); width:80%;">
                        <h3 style="color: rgba(255, 255, 255, 0.9); font-size: 1rem; margin-bottom: 12px; font-weight: 600;">
                            🍩 Gastos por categorías
                        </h3>
                        <div style="position:relative; display: flex; flex-direction: column; align-items: center; padding: 10px; background: rgba(0, 0, 0, 0.2); border-radius: 8px;">
                            <!-- SVG Donut Chart - AHORA RESPONSIVE -->
                            <div style="width: 90%; max-width: 200px; aspect-ratio: 1/1; margin-bottom: 15px;">
                                <svg width="100%" height="100%" viewBox="0 0 200 200" style="display: block;">
                                    <!-- Círculo de fondo -->
                                    <circle cx="100" cy="100" r="90" fill="rgba(255,255,255,0.05)" />

                                    <!-- Segmentos del donut (cutout más grande = 70%) -->
                                    <!-- Alimentación (40%) - Verde brillante -->
                                    <circle cx="100" cy="100" r="55" fill="none" stroke="#10B981" stroke-width="50"
                                            stroke-dasharray="138 345" transform="rotate(-90 100 100)" />

                                    <!-- Transporte (30%) - Azul brillante -->
                                    <circle cx="100" cy="100" r="55" fill="none" stroke="#3B82F6" stroke-width="50"
                                            stroke-dasharray="104 379" transform="rotate(54 100 100)" />

                                    <!-- Entretenimiento (20%) - Naranja brillante -->
                                    <circle cx="100" cy="100" r="55" fill="none" stroke="#F59E0B" stroke-width="50"
                                            stroke-dasharray="69 414" transform="rotate(162 100 100)" />

                                    <!-- Otros (10%) - Rosa brillante -->
                                    <circle cx="100" cy="100" r="55" fill="none" stroke="#EC4899" stroke-width="50"
                                            stroke-dasharray="35 448" transform="rotate(234 100 100)" />

                                    <!-- Círculo interno para efecto de dona (70% cutout) -->
                                    <circle cx="100" cy="100" r="70" fill="rgba(17, 25, 40, 0.95)" />

                                    <!-- Texto central -->
                                    <text x="100" y="95" text-anchor="middle" fill="rgba(255,255,255,0.7)" font-size="14" font-weight="400">Total</text>
                                    <text x="100" y="115" text-anchor="middle" fill="white" font-size="18" font-weight="700">RD$3,750</text>
                                </svg>
                            </div>

                            <!-- Leyenda debajo del gráfico (como en Dashboard) -->
                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; width: 100%; max-width: 250px;">
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <span style="width: 12px; height: 12px; border-radius: 50%; background: #10B981; display: inline-block;"></span>
                                    <span style="color: rgba(255,255,255,0.9); font-size: 0.85rem;">Alimentación</span>
                                </div>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <span style="width: 12px; height: 12px; border-radius: 50%; background: #3B82F6; display: inline-block;"></span>
                                    <span style="color: rgba(255,255,255,0.9); font-size: 0.85rem;">Transporte</span>
                                </div>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <span style="width: 12px; height: 12px; border-radius: 50%; background: #F59E0B; display: inline-block;"></span>
                                    <span style="color: rgba(255,255,255,0.9); font-size: 0.85rem;">Entretenimiento</span>
                                </div>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <span style="width: 12px; height: 12px; border-radius: 50%; background: #EC4899; display: inline-block;"></span>
                                    <span style="color: rgba(255,255,255,0.9); font-size: 0.85rem;">Otros</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

