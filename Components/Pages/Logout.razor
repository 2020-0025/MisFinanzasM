@page "/logout"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Identity
@using MisFinanzas.Domain.Entities
@using Microsoft.JSInterop
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Cerrando Sesión...</PageTitle>

<div class="logout-container">
    <div class="spinner-border text-light" role="status">
        <span class="visually-hidden">Cerrando sesión...</span>
    </div>
    <p class="mt-3 text-white">Cerrando sesión...</p>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Limpiar sessionStorage
            await JSRuntime.InvokeVoidAsync("sessionStorage.clear");

            await Task.Delay(1000);

            // Redirigir usando JavaScript
            await JSRuntime.InvokeVoidAsync("eval", "window.location.href = '/login'");
        }
    }
}